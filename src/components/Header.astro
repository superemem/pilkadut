---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { imageConfig } from 'astro:assets';
const blog = await Astro.glob("../content/blog/*.md");
---

<header>
	<nav class="relative px-2 py-6 mx-2 flex justify-between items-center bg-white">
		<h2><a href="/"><img src="/favicon.svg" width="36" alt="Logo Pilkada Sumbar" class="inline-block mr-2">{SITE_TITLE}</a></h2>
